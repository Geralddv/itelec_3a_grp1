<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/logo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="@drawable/registerbackground">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="224dp"
        android:text="@string/create_new_account"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/student_number"
        android:textColor="#FFFFFF"
        android:labelFor="@id/inputStudentNo"
        app:layout_constraintBottom_toTopOf="@+id/inputStudentNo"
        app:layout_constraintStart_toStartOf="@id/inputStudentNo" />


    <EditText
        android:id="@+id/inputStudentNo"
        android:layout_width="293dp"
        android:layout_height="55dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/curve_rectangle"
        android:ems="10"
        android:inputType="text"
        android:paddingStart="20sp"
        android:paddingEnd="10sp"
        android:textColor="#FFFFFF"
        android:autofillHints="studentNumber"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/password"
        android:textColor="#FFFFFF"
        android:labelFor="@id/inputPassword"
        app:layout_constraintStart_toStartOf="@id/inputPassword"
        app:layout_constraintBottom_toTopOf="@id/inputPassword" />


    <EditText
        android:id="@+id/inputPassword"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/curve_rectangle"
        android:ems="10"
        android:inputType="textPassword"
        android:paddingStart="20sp"
        android:paddingEnd="10sp"
        android:textColor="#FFFFFF"
        android:autofillHints="newPassword"
        app:layout_constraintEnd_toEndOf="@id/inputStudentNo"
        app:layout_constraintStart_toStartOf="@id/inputStudentNo"
        app:layout_constraintTop_toBottomOf="@id/inputStudentNo" />


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email"
        android:textColor="#FFFFFF"
        android:labelFor="@id/inputEmail"
        app:layout_constraintStart_toStartOf="@id/inputEmail"
        app:layout_constraintBottom_toTopOf="@id/inputEmail" />


    <EditText
        android:id="@+id/inputEmail"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/curve_rectangle"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:paddingStart="20sp"
        android:paddingEnd="10sp"
        android:textColor="#FFFFFF"
        android:autofillHints="emailAddress"
        app:layout_constraintEnd_toEndOf="@id/inputPassword"
        app:layout_constraintStart_toStartOf="@id/inputPassword"
        app:layout_constraintTop_toBottomOf="@id/inputPassword" />


    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/department"
        android:textColor="#FFFFFF"
        android:labelFor="@id/inputDepartment"
        app:layout_constraintStart_toStartOf="@id/inputDepartment"
        app:layout_constraintBottom_toTopOf="@id/inputDepartment" />


    <EditText
        android:id="@+id/inputDepartment"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/curve_rectangle"
        android:ems="10"
        android:inputType="text"
        android:paddingStart="20sp"
        android:paddingEnd="10sp"
        android:textColor="#FFFFFF"
        android:autofillHints="organizationTitle"
        app:layout_constraintEnd_toEndOf="@id/inputEmail"
        app:layout_constraintStart_toStartOf="@id/inputEmail"
        app:layout_constraintTop_toBottomOf="@id/inputEmail" />


    <Button
        android:id="@+id/button2"
        android:layout_width="209dp"
        android:layout_height="49dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="45dp"
        android:backgroundTint="#FFFFFF"
        android:text="@string/sign_up"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@id/inputDepartment"
        app:layout_constraintStart_toStartOf="@id/inputDepartment"
        app:layout_constraintTop_toBottomOf="@id/inputDepartment" />


    <TextView
        android:id="@+id/alreadyhaveaccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/already_have_account"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@id/button2"
        app:layout_constraintStart_toStartOf="@id/button2"
        app:layout_constraintTop_toBottomOf="@id/button2" />

</androidx.constraintlayout.widget.ConstraintLayout>