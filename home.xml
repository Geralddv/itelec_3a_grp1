<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d6a0a9"
    tools:context=".MainActivity">

    <com.google.android.material.navigation.NavigationView
        android:layout_width="410dp"
        android:layout_height="74dp"
        android:background="#800000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="59dp"
                android:layout_height="52dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="16dp"
                app:srcCompat="@drawable/school" />

            <TextView
                android:id="@+id/txtview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/imageView3"
                android:text="UNIVERSITY OF BATANGAS"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <!--<ImageButton
                android:id="@+id/imageButton9"
                android:layout_width="51dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="15dp"
                android:layout_toRightOf="@id/txtview"
                android:background="@null"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/Profile" />-->

        </RelativeLayout>
    </com.google.android.material.navigation.NavigationView>

    <Button
        android:id="@+id/btncitec"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_marginTop="100dp"
        android:backgroundTint="#800000"
        android:text="CITEC"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnceas"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_marginTop="196dp"
        android:backgroundTint="#800000"
        android:text="CEAS"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btncmt"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_marginTop="292dp"
        android:backgroundTint="#800000"
        android:text="CMT"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnccje"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_marginTop="384dp"
        android:backgroundTint="#800000"
        android:text="CCJE"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btncenar"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_marginTop="480dp"
        android:backgroundTint="#800000"
        android:text="CENAR"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>